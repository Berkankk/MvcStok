@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteriler", FormMethod.Get))
{
    <p>
         <b>Aranacak Müşteri Adı:</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}



<table class="table table-bordered">
    <tr>
        <th>MÜSTERI ID</th>
        <th>MÜSTERI ADI</th>
        <th>MÜSTERI SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>

    <tbody>
        @foreach (var mrn in Model)
        {
            <tr>
                <th>@mrn.MUSTERIID</th>
                <td>@mrn.MUSTERIAD</td>
                <td>@mrn.MUSTERISOYAD</td>
                <td><a href="/MUSTERILER/SIL/@mrn.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERILER/MusteriGetir/@mrn.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("Sil Butonu", "SIL", new { id = mrn.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
            </tr>

        }
    </tbody>


</table>
<a href="/Musteriler/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

